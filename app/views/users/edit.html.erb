<div class="margin-top-two">
  <%= form_for :user, url: user_path(@user), html: { multipart: true }, method: :patch do |f| %>
  <div class="row">

    <div class="large-10 column column--center">
      <div class="row">
        <div class="large-12 column">

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :type => 'text', :autofocus => true, :placeholder => 'Name', :class => 'form-control', :required => 'true' %>
          </div>

          <div class="form-group">
            <%= f.label :profile_banner %>
            <div class="row">
              <div class="large-10 medium-10 small-10 column">
                <%= f.file_field :profile_banner, :class => 'form-control' %>
              </div>
              <label for="user_profile_banner">
                <div class="large-2 medium-2 small-2 column">
                <img src="<%= @user.profile_banner_url if @user.profile_banner.present? %>" class="pointer">
                </div>
              </label>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class=>'form-control' %>
          </div>

          <%= f.submit class:'button button-primary'%>

        </div>
      </div>
    </div>

  </div>
  <% end %>
</div>

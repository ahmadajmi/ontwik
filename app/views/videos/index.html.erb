<div class="row">

  <div class="col-sm-3 col-md-3">
    <ul class="list-group">
      <% tag_cloud Video.tag_counts, %w{s m l} do |tag| %>
        <li class="list-group-item"><%= link_to tag.name, tag_path(tag.name)%></li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-9 col-md-9">
    <div class="row">
      <% @videos.each do |video| %>
        <div class="col-sm-6 col-md-4 mb2">
          <div class="white-bg">
            <img src="<%= video.thumbnail_url %>" class="block">
            <div class="padlx padly">
              <%= link_to video.title, video, :class=> 'ell block' %>
              <%= link_to video.tag_list, tag_path(video.tag_list)%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>


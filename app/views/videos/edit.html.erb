<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :video, url: video_path(@video), method: :patch do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :type => 'text', :placeholder => 'Video URL', :class => 'form-control', :required => 'true' %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, :type => 'text', :placeholder => 'Tags', :class => 'form-control', :required => 'true' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :autofocus => true, :class=>'form-control', :hatch => true %>
    </div>

    <div class="form-group">
      <%= f.submit class:'btn btn-primary'%>
    </div>

    <%= link_to 'Delete', video_path(@video), method: :delete, data: { confirm: 'Are you sure you want to delete this video?' } %>

    <% end %>
  </div>
</div>

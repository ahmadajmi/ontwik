<div class="margin-top-four">

  <div class="row">

    <div class="large-10 column column--center">
      <div class="row">
        <div class="large-12 column">
          <%= form_for :video, url: video_path(@video), method: :patch do |f| %>

          <div class="margin-bottom-one">
            <%= f.label :title %>
            <%= f.text_field :title, :type => 'text', :placeholder => 'Video URL', :class => 'form-control form-control border padding-one full-width', :required => 'true' %>
          </div>

          <div class="margin-bottom-one">
            <%= f.label :tag_list %>
            <%= f.text_field :tag_list, :type => 'text', :placeholder => 'Tags', :class => 'form-control form-control border padding-one full-width', :required => 'true' %>
          </div>

          <div class="margin-bottom-one">
            <%= f.label :description %> <small class="notice right">Markdown and syntax hilight are supported.</small>
            <%= f.text_area :description, :autofocus => true, :placeholder => 'Description', :class=>'form-control form-control border padding-one full-width', :hatch => true %>
          </div>

          <div class="margin-bottom-one">
            <%= f.submit class:'padding-top-halve padding-left-two padding-bottom-halve padding-right-two'%>
          </div>

          <%= link_to 'Delete', video_path(@video), method: :delete, data: { confirm: 'Are you sure you want to delete this video?' } %>

          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

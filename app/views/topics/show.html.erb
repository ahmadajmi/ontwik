<% content_for :title do %>
Topics
<% end %>

<div class="margin-top-one">
  <div class="row ">

    <div class="large-2 column">
      <ul class="list-bare">
        <% @topics.each do |topic| %>
        <li>
          <%= link_to topic.name, :class=> "small border-bottom padding-top-half padding-bottom-half block dark-gray" do %>
          <%= topic.name %>
          <span class="right"><%= topic.talks.length %></span>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>

    <div class="large-10 column">
      <div class="row">
        <div class="large-12 column">
          <h3 class="margin-top-none margin-bottom-one regular"><%= @topic.name %></h3>
        </div>
        <% if @talks.length > 0 %>
        <% @talks.each do |talk| %>
        <%= render 'shared/talk_card', :talk => talk, classes: "large-4 medium-6" %>
        <% end %>
        <% else %>
        <%= render 'shared/talk_card_placeholders' %>
        <%= render 'shared/talk_card_placeholders' %>
        <% end %>
      </div>
      <%= render 'shared/pagination' %>
    </div>

  </div>
</div>

<div class="hide">
  <p>
    <strong>Name:</strong>
    <%= @topic.name %>
  </p>

  <%= link_to 'Edit', edit_topic_path(@topic) %> |
  <%= link_to 'Back', topics_path %>
</div>

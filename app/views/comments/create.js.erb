var comments_list = $('#comments-list');

$('<%= escape_javascript(render partial: @comment) %>').appendTo(comments_list).hide().fadeIn(300);
$('#comments-count').html('This article has <%= escape_javascript(pluralize(@talk.comments.count, 'comment')) %>');
comments_list.find('.comment:last-child').addClass('last-comment').fadeIn('slow');

$('#comment_content').val('');
$('#comment_content').attr( 'required', false );

<div class="border-bottom margin-bottom-one comment on-hover">

  <div class="row">
    <div class="column small-2 medium-1 large-1">
      <%= link_to comment.profile, :class=> "" do %>
      <img src="<%= comment.profile.image %>" alt="<%= comment.profile.name %>">
      <% end %>
    </div>
    <div class="column small-10 large-11 padding-left-none">
      <div class="relative">
        <%= markdown(comment.content) %>
        <% if user_signed_in? and current_user == comment.profile %>
        <%= link_to '', comment, method: :delete, :class => 'small dark-gray iconicstroke-x absolute pin-top-right on-hover-inner', :remote => true, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>

</div>

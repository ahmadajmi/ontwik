<% if user_signed_in? %>

<li class="right">
  <%= link_to '/signout', :class=> "border-right border-left inline-block padding-right-one padding-left-one padding-top-half padding-bottom-half dark-gray", :title => 'Logout' do %>
  <span class="iconicstroke-arrow-right"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to edit_speaker_path(current_user), :class=> "border-left block padding-right-one padding-left-one padding-top-half padding-bottom-half dark-gray", :title => 'Profile Settings' do %>
  <span class="iconicstroke-cog"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to current_user.nickname, :class=> "block padding-right-one padding-left-one padding-top-half padding-bottom-half dark-gray", :title => 'Profile' do %>
  <span class="iconicstroke-user"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to({:action => 'new', :controller => 'talks'}, {:class => "border-right border-left block padding-right-one padding-left-one padding-top-half padding-bottom-half dark-gray", :title => 'Add new talk'}) do %>
  <span class="iconicstroke-plus"></span>
  <% end %>
</li>

<% else %>

<li>
  <%= link_to 'Sign in with Twitter', '/signin', :class => 'button button-info' %>
</li>

<% end %>

<% if user_signed_in? %>

<li class="right">
  <%= link_to '/signout', :class=> "border-right border-left inline-block padding-right-one padding-left-one padding-top-halve padding-bottom-halve" do %>
  <span class="iconicstroke-arrow-right" title="Logout"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to edit_user_path(current_user), :class=> "border-left block padding-right-one padding-left-one padding-top-halve padding-bottom-halve" do %>
  <span class="iconicstroke-cog" title="Edit Profile"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to current_user, :class=> " block padding-right-one padding-left-one padding-top-halve padding-bottom-halve" do %>
  <span class="iconicstroke-user" title="Profile"></span>
  <% end %>
</li>

<li class="right">
  <%= link_to({:action => 'new', :controller => 'videos'}, {:class => "border-right border-left block padding-right-one padding-left-one padding-top-halve padding-bottom-halve"}) do %>
  <span class="iconicstroke-plus" title="Add new video"></span>
  <% end %>
</li>

<% else %>

<li>
  <%= link_to 'Sign in with Twitter', '/signin', :class => 'button button-info' %>
</li>

<% end %>

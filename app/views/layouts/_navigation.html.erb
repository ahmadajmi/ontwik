<div class='row'>

  <div class="large-3 column">
    <%= link_to 'Ontwik', root_path, class: 'brand brand padding-top-halve padding-bottom-halve' %>
  </div>

  <div class="large-3 column hide">
    <%= form_tag videos_path, :method => 'get', :class => "navbar-form navbar-left" do %>
    <div class="form-group" style="opacity:0;">
      <%= text_field_tag :search, params[:search], class: 'form-control border padding-quarter', placeholder: "Search"%>
      <button type="submit" class="btn btn-default btn-search">Search</button>
    </div>

    <% end %>
  </div>

  <div class="large-9 column text-right">
    <ul class="nav list-bare">
      <%= render 'layouts/profile_navigation_links' %>
    </ul>
  </div>

</div>

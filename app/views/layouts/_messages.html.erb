<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
<% if msg.is_a?(String) %>
<div class="margin-top-one">
  <div class="row">
    <div class="large-12 column">
      <div class="border padding-one alert alert--<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
        <button type="button" class="close right" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>

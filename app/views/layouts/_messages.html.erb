<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
<% if msg.is_a?(String) %>
<div class="padding-one white alert <%= name.to_s == 'notice' ? 'success' : 'danger' %>-bg">
  <button type="button" class="close close--alert right white" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
</div>
<% end %>
<% end %>

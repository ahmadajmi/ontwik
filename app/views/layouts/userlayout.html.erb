<%= render 'shared/head' %>

<header class="full-height media-cover relative margin-bottom-three"
style="background-image: url(<%= @speaker.profile_banner_url if @speaker.profile_banner.present? %>)">

<%= render 'layouts/navigation' %>
<div class="gradient gradient--hero"></div>
<div class="container vertical-align">
  <div class="col-sm-6 col-md-3">
    <div class="text-center white-bg">
      <div class="padlx padly">

        <div class="text-center margin-bottom-one ">
          <img src="<%= @speaker.image if @speaker.image %>">
          <h3><%= @speaker.name if @speaker.name %></h3>
          <p><%= @speaker.description if @speaker.description %></p>
        </div>

        <div class="row margin-bottom-one">
          <div class="col-sm-4 col-md-4">
            <strong class="block"><%= @speaker.talks.count %></strong>
            talks
          </div>
          <div class="col-sm-4 col-md-4">
            <strong class="block"><%= @speaker.followers(speaker).count %></strong>
            Followers
          </div>
          <div class="col-sm-4 col-md-4">
            <strong class="block"><%= @speaker.followees(speaker).count %></strong>
            Following
          </div>
        </div>

        <div class="text-center">
          <%= render 'shared/follow_form' , speaker: @speaker %>
        </div>

      </div>
    </div>
  </div>
</div>

</header>

<%= render 'layouts/messages' %>
<%= yield %>

<%= render 'shared/footer' %>

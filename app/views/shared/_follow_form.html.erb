<% if user_signed_in? and current_user!= speaker %>
  <div class="speaker-<%= speaker.id %>">
    <div id="follow_form">
      <% if current_user.follows?(speaker) %>
        <%= render 'shared/unfollow' %>
      <% else %>
        <%= render 'shared/follow' %>
      <% end %>
    </div>
  </div>
<% end %>
